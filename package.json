{
  "name": "@craic/typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript-boilerplate",
  "repository": "git@github.com:JakobPetersson/typescript-boilerplate.git",
  "author": "Jakob Petersson <github@jakobpetersson.se>",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:lint": "tslint -p .",
    "test:unit": "jest",
    "test": "run-p test:*",
    "build": "rm -rf dist/ && tsc",
    "precommit": "run-s test build && git add -A dist",
    "release:tag": "git tag $npm_package_version && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "22.2.0",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "npm-run-all": "4.1.2",
    "ts-jest": "22.4.1",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
