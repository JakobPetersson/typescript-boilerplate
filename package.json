{
  "name": "@minukood/typescript-boilerplate",
  "version": "0.0.6",
  "description": "typescript-boilerplate",
  "repository": "git@github.com:JakobPetersson/typescript-boilerplate.git",
  "author": "Jakob Petersson <github@jakobpetersson.se>",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:lint": "tslint --fix -p ./tsconfig.test.json",
    "test:unit": "jest",
    "test": "npm run test:lint && npm run test:unit",
    "build": "rm -rf dist/ && tsc",
    "preversion": "npm run precommit",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "23.3.10",
    "husky": "1.2.0",
    "jest": "23.6.0",
    "ts-jest": "23.10.5",
    "tslint": "5.11.0",
    "tslint-react": "3.6.0",
    "typescript": "3.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[tj]sx?$",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run build && git add -A dist"
    }
  }
}
