{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "typescript-boilerplate",
  "repository": "git@github.com:JakobPetersson/typescript-boilerplate.git",
  "author": "Jakob Petersson <github@jakobpetersson.se>",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "precommit": "yarn build"
  },
  "devDependencies": {
    "@types/jest": "22.2.0",
    "husky": "0.14.3",
    "jest": "22.4.2",
    "ts-jest": "22.4.1",
    "typescript": "2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
